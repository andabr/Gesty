<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/white">
		
	<TextView
		android:id="@+id/about_text_version"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Version"
		android:textSize="18sp"
		android:textColor="@color/black"
		android:layout_centerInParent="true"
		android:layout_marginTop="@dimen/textview_margin_top"
		android:layout_marginLeft="@dimen/textview_margin_left"
		android:layout_marginRight="@dimen/textview_margin_right"/>
				
	<TextView
		android:id="@+id/about_text_website"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_below="@id/about_text_version"
		android:text="www.vodafone.com"
		android:textColor="@color/black"
		android:textSize="16sp"
		android:autoLink="web"
		android:gravity="center_horizontal"
		android:layout_marginBottom="@dimen/textview_margin_bottom"
		android:layout_marginLeft="@dimen/textview_margin_left"
		android:layout_marginRight="@dimen/textview_margin_right"/>
		
	<TextView
		android:id="@+id/about_text_copyright"
		android:text="Copyright 2011"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_alignParentBottom="true"
		android:textColor="@color/black"
		android:textSize="14sp"
		android:gravity="center_horizontal"
		android:paddingBottom="20dip"
		android:layout_marginTop="@dimen/textview_margin_top"
		android:layout_marginLeft="@dimen/textview_margin_left"
		android:layout_marginRight="@dimen/textview_margin_right"/>		
</RelativeLayout>
