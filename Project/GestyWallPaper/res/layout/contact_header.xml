<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:padding="10dp"
  android:background="@drawable/background_gradient"
  android:orientation="horizontal">
  <ImageView 
	android:id="@+id/contact_imageAvatar"
	android:src="@drawable/avatar"
	android:layout_centerVertical="true"
	android:layout_marginLeft="6dp"
	android:layout_alignParentLeft="true"
	android:layout_width="44dp"
	android:layout_height="44dp"
	android:layout_marginTop="2dp"
	android:layout_marginBottom="2dp"/>
  <LinearLayout
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:layout_centerVertical="true"
	  android:layout_toRightOf="@id/contact_imageAvatar"
	  android:orientation="vertical">
	  <TextView
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:id="@+id/contact_textName"
		  android:text="Name LastName"
		  android:ellipsize="end"
		  android:singleLine="true"
		  android:textAppearance="@style/TextMediumBold"
		  android:paddingLeft="4dp"/>
	 <LinearLayout
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:paddingLeft="2dp"
		  android:orientation="horizontal">
		  <ImageView
		  	android:layout_height="18dp"
		  	android:layout_width="18dp"
		  	android:id="@+id/contact_actionImage"
		  	android:scaleType="fitXY"
		  	android:src="@drawable/icon_punch_call"/>
		  <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/contact_textActionDetails"
			android:text="action"
			android:ellipsize="end"
			android:singleLine="true"
			android:textAppearance="@style/TextMedium"
			android:paddingLeft="4dp"/>
	   </LinearLayout>
  </LinearLayout>
</RelativeLayout>