<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:background="@drawable/background_gradient">

    <TextView
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginRight="6dip"
          android:layout_marginLeft="16dip"

		  android:id="@+id/create_gesture_gesture_name"
		  android:layout_alignParentTop="true"
          android:text="value of this detail"
          android:textAppearance="@style/TextLargeBold"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:id="@+id/create_gesture_buttons"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/done"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:onClick="addGesture"
            android:background="@drawable/btn_light_grey_selector"
            
            android:text="@string/button_done" />
    
        <Button
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="cancelGesture"
            android:background="@drawable/btn_light_grey_selector"
            
            android:text="@string/button_discard" />
    
    </LinearLayout>
    
    <com.andreid.gesty.ui.custom.MyGestureOverlay
        android:id="@+id/gestures_overlay"
        android:background="@drawable/drawing_area"
        android:layout_below="@id/create_gesture_gesture_name"
        android:layout_above="@id/create_gesture_buttons"
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:gestureStrokeType="multiple" />
    
    
</RelativeLayout>
